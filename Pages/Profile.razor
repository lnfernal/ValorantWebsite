@page "/profile"
@using QRCoder
@using System.Drawing;
@using System.Drawing.Imaging;
@using ValorantManager.Data
@using ValorantManager.JsonModels;
@using Microsoft.AspNetCore.Components;
@using static QRCoder.PayloadGenerator
@inject ValorantService ValService
@inject NavigationManager NavManager

<PageTitle>Profile | @ValService.user.Name</PageTitle>

@if (ValService.user.loginState == LoginState.LoggedIn)
{
    <h1>@ValService.user.Name's Profile</h1>
    <p class="text-start text-wrap" style="width:80vw">
        User Information:<br />
        Account ID: @ValService.user.puuid <br />
        Account Created On: @ValService.GetAccountCreationDate() (UTC) <br>
        Valorant Points: @ValService.user.wallet.Balances.ValorantPoints <br />
        Radianite: @ValService.user.wallet.Balances.Radianite <br />
        Region: @ValService.user.region <br />
        <br>
        <ul class="list-group text-break" style="background:#484848;width:80vw">
            <p class="text-left" style="padding-left:5px">Current Token:</p>
            <li class="list-group-item kye_secret" style="background:#484848">@ValService.user.Token</li>
            <p class="text-left" style="padding-left:5px">Current Entitlement:</p>
            <li class="list-group-item kye_secret" style="background:#484848">@ValService.user.Entitlement</li>
        </ul>

    </p>
    <button type="button" class="btn btn-primary" @onclick="@GetQRCode">Get QR Code to login to Pro Swapper Valorant on mobile</button>
    @if (QRCode != null)
    {
        <p>
            Log into Pro Swapper Valorant on mobile using the QR code below
        </p>
        <img src="@QRCode" style="height:300px; width:300px" />
    }
}

